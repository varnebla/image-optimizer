---
import '../styles/global.css';
import Navbar from '@components/Navbar.astro';
import Footer from '@components/Footer.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import type { Lang } from '@i18n/ui';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  hrefEn?: string;
  hrefEs?: string;
}

const { title, description, canonical, hrefEn, hrefEs } = Astro.props;
const lang = getLangFromUrl(Astro.url) as Lang;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
      {title}
    </title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="icon"
      href="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸš€</text></svg>"
    />

    <link rel="canonical" href={canonical} />
    <link rel="alternate" hreflang="en" href={hrefEn} />
    <link rel="alternate" hreflang="es" href={hrefEs} />
    <link
      rel="alternate"
      hreflang="x-default"
      href="https://image-optimizer.xyz/"
    />

    <script
      defer
      src="https://analytics.varnebla.dev/script.js"
      data-website-id="9925a7fd-1e3a-4cee-9f5f-e74228f74516"></script>
    <script>
      if (!import.meta.env.PROD) localStorage.setItem('umami.disabled', '1');
    </script>
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
