---
import Layout from '@layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// hreflang pair
const hrefEn = 'https://image-optimizer.xyz/convert-to-webp';
const hrefEs = 'https://image-optimizer.xyz/es/convertir-a-webp';
const canonical = hrefEs;
---

<Layout
  title={t('page.webp.title')}
  description={t('page.webp.description')}
  canonical={canonical}
  hrefEn={hrefEn}
  hrefEs={hrefEs}
>
  <main class="max-w-6xl mx-auto p-8">
    <div class="mb-12">
      <h1
        class="text-4xl font-bold mb-8 text-center text-gray-800 max-w-3xl mx-auto text-pretty"
      >
        {t('page.webp.heading')}
      </h1>

      <div class="max-w-3xl mx-auto space-y-4 text-gray-700 leading-relaxed">
        <p>
          {t('page.webp.intro1')}
        </p>
        <p>
          {t('page.webp.intro2')}
        </p>
        <p>
          {t('page.webp.intro3')}
        </p>
      </div>
    </div>

    <div class="text-center">
      <a
        href="/"
        class="inline-block px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors shadow-md"
        >{t('page.webp.cta')}</a
      >
    </div>
  </main>
</Layout>
