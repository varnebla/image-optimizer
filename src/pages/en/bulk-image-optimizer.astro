---
import Layout from '@layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// hreflang pair
const hrefEn = 'https://image-optimizer.xyz/en/bulk-optimize-images';
const hrefEs = 'https://image-optimizer.xyz/optimizar-varias-imagenes';
const canonical = hrefEn;
---

<Layout
  title={t('page.bulk.title')}
  description={t('page.bulk.description')}
  hrefEn={hrefEn}
  hrefEs={hrefEs}
  canonical={canonical}
>
  <main class="max-w-6xl mx-auto p-8">
    <div class="mb-12">
      <h1
        class="text-4xl font-bold mb-8 text-center text-gray-800 max-w-3xl mx-auto text-pretty"
      >
        {t('page.bulk.heading')}
      </h1>

      <div class="max-w-3xl mx-auto space-y-4 text-gray-700 leading-relaxed">
        <p>
          {t('page.bulk.intro1')}
        </p>
        <p>
          {t('page.bulk.intro2')}
        </p>
        <p>
          {t('page.bulk.intro3')}
        </p>
      </div>
    </div>
  </main>

  <div class="text-center">
    <a
      href="/en/"
      class="inline-block px-8 py-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors shadow-md"
      >{t('page.bulk.cta')}</a
    >
  </div>
</Layout>
