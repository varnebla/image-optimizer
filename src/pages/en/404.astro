---
import Layout from '@layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';
import type { Lang } from '@i18n/ui';

const lang = getLangFromUrl(Astro.url) as Lang;
const t = useTranslations(lang);

const hrefEn = 'https://image-optimizer.xyz/en/404';
const hrefEs = 'https://image-optimizer.xyz/404';
---

<Layout
  title={t('404.title')}
  description={t('404.description')}
  hrefEn={hrefEn}
  hrefEs={hrefEs}
  noindex={true}
>
  <div
    class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
  >
    <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-6">{t('404.heading')}</h2>
    <p class="text-lg text-gray-600 dark:text-gray-400 max-w-md mb-8">
      {t('404.message')}
    </p>
    <a
      href="/en"
      class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 transition-colors"
    >
      {t('404.backHome')}
    </a>
  </div>
</Layout>
