---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const posts = (await getCollection('blog'))
  .filter((post) => !post.slug.startsWith('en/'))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title={t('blog.title')} description={t('blog.description')}>
  <div class="container mx-auto px-4 py-12 max-w-3xl">
    <h1 class="text-4xl font-bold mb-8">{t('blog.heading')}</h1>

    <div class="gap-y-8 flex flex-col divide-y divide-stone-200">
      {
        posts.map((post) => (
          <article class="pb-8">
            <a href={`/blog/${post.slug}`} class="block group">
              <h2 class="text-2xl font-semibold mb-3 group-hover:text-lime-600 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-gray-700  mb-3">{post.data.description}</p>
              <div class="text-sm text-gray-500">
                <span>{post.data.author}</span> Â·
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</Layout>
